{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": "off",
        "arrow-parens": "off",
        "semi": ["warn", "always"],
        "quotes": ["warn", "single", { "allowTemplateLiterals": true }],        
        "no-unused-vars": "warn",
        "import/prefer-default-export": "off",
        "indent": ["error", 2],
        "no-use-before-define": "warn",
        "no-plusplus": "off",
        "radix":"off"
    }
}
